{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9",
          "includeFiles": ["staticfiles/**", "event_management/**", "*.txt"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py"
      },
      {
        "src": "/api-auth/(.*)",
        "dest": "api/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "api/index.py"
      }
    ],
    "buildCommand": "./vercel.sh",
    "outputDirectory": ".",
    "git": {
      "deploymentEnabled": {
        "main": true
      }
    }
  } 